<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lifeplaytrip.fragment.MondayFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Breakfast"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/breakfastLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/sign_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/greentick" />

        <TextView
            android:id="@+id/sign_image1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/sign_image1"
            android:text=" Omelette made with three egg whites and filled with 75g chopped mixed peppers and a handful of spinach" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Mid-morning snack"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/midmrngfastLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mid_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/greentick" />

        <TextView
            android:id="@+id/mid_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/mid_image"
            android:text="100g chicken with ½ red pepper, sliced" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Lunch"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/lunchfastLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/lunch_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/greentick" />

        <TextView
            android:id="@+id/lunch_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/lunch_image"
            android:text="One grilled chicken breast, mixed salad leaves, red peppers, green beans and ¼ tbsp olive oil" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Mid-afternoon snack"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/mid_afternoonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mid_afternoon_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/greentick" />

        <TextView
            android:id="@+id/mid_afternoon_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/mid_afternoon_image"
            android:text="One grilled chicken breast, mixed salad leaves, red peppers, green beans and ¼ tbsp olive oil" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Dinner"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/dinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/dinner_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/greentick" />

        <TextView
            android:id="@+id/dinner_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/dinner_image"
            android:text="100g grilled chicken breast with steamed broccoli" />


    </RelativeLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
