<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lifeplaytrip">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.HomeScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.HealthfiyActivity" />
        <activity android:name=".activity.DietPlanActivity" />
        <activity
            android:name=".activity.LooseWeightActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GainWeightActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HealthyDietActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.BMI_CalculatorActivity" />
        <activity android:name=".activity.Calorie_CalculatorActivity" />
        <activity android:name=".activity.HeartRateActivity" />
        <activity android:name=".activity.YogaActivity" />
        <activity android:name=".activity.MeditationActivity" />
        <activity android:name=".activity.MusicListActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />

        <service android:name=".activity.LocationService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".activity.DueDateCalculatorActivity" />
        <activity android:name=".activity.Profile" />
        <activity android:name=".activity.HelpLineActivity" />
        <activity android:name=".activity.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Yoga_OptionActivity" />
        <activity android:name=".activity.Yoga_HindiActivity"></activity>
    </application>

</manifest>